<h3>Add Review</h3>

<%= form_for([@movie, @movie.reviews.build]) do |f| %>
	<p>
		<%= f.label :body %>
		<br>
		<%= f.text_area(:body, {:class => 'form-control'}) %>
		<br>
		<%= f.label :rating %>
		<br>
		<%= f.text_field(:rating, {:class => 'form-control'}) %>
	</p>
	<p>
		<%= f.submit({:class => 'btn btn-default'}) %>
	</p>
<% end %>